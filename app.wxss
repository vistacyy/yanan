@import "/wxParse/wxParse.wxss";
.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.align-center {
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex-grow: 1;
}

view,
img {
  box-sizing: border-box;
}

page {
  width: 100%;
  overflow-x: hidden;
  background-color: #eee;
}

.widthMargin {
  margin-left: 24rpx;
  margin-right: 24rpx;
  width: 702rpx;
}

.text-ellipsis {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}