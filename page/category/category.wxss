page {
  background: #eee;
  height: 100%;
}

.tab {
  height: 90rpx;
  position: fixed;
  z-index: 2;
}

.tabbox {
  height: 90rpx;
  color: #666;
  font-size: 28rpx;
  background: #fff;
}

.tabItem {
  width: 150rpx;
  margin-left: 18rpx;
  margin-right: 18rpx;
  height: 90rpx;
}

.active {
  color: #33BBAF;
  border-bottom: 2px solid #33BBAF;
}

.content {
  height: 100%;
  padding-top: 90rpx;
}

.item {
  height: 102px;
  margin-top: 10px;
  background: #fff;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, .6);
}

.itemLeft {
  width: 135px;
  height: 102px;
}

.itemRight {
  width: 135px;
  color: #333;
  font-size: 16px;
  padding: 3px;
}

.itemTitle {
  font-size: 18px;
  -webkit-line-clamp: 1;
}

.itemContent {
  -webkit-line-clamp: 2;
}

.itemOther {
  font-size: 11px;
  color: #666;
}

.itemImg {
  width: 15px;
  height: 15px;
  margin-right: 3px;
}

.video {
  width: 100%;
  margin: 20rpx 10rpx 0 10rpx;
}

.videoItem {
  width: 223.33rpx;
  margin: 0 10rpx 20rpx 10rpx;
  background: #fff;
  box-shadow: 5px 5px 5px rgba(0, 0, 0, .6);
}

.videoImg {
  width: 100%;
  height: 300rpx;
}

.videoText {
  margin: 5px auto;
  width: 100%;
  height: 16px;
  text-align: center;
  font-size: 14px;
  color: #333;
  -webkit-line-clamp: 1;
}