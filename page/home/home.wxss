swiper {
  width: 750rpx;
  height: 335rpx;
  margin-bottom: 10px;
}

.swiper-item {
  display: block;
  width: 750rpx;
  height: 335rpx;
}

.head {
  height: 50px;
  position: relative
}

.headLine {
  width: 100%;
  height: 2px;
  background: #999;
}

.headBox {
  position: absolute;
  width: 702rpx;
  height: 50px;
}

.headText {
  background: #fff;
  padding: 0 20px;
  font-size: 24px;
  color: #333;
}

.category {
  margin: auto 50rpx;
  width: 630rpx;
}

.categoryBox {
  width: 50%;
  height: 90rpx;
  margin: 5rpx 0;
}

.categoryName {
  height: 90rpx;
  border: 1px solid 999;
  border-radius: 10rpx;
  background: #f9a54d;
  font-size: 20px;
  color: #fff;
  margin: 0 10rpx;
}

.tab {
  height: 70rpx;
}

.tabBar {
  height: 70rpx;
  width: 110rpx;
  background: #eee;
}

.tabLeft {
  margin-right: 40rpx;
  border-radius: 20rpx 0 0 20rpx;
}

.tabRight {
  border-radius: 0 20rpx 20rpx 0;
}

.active {
  color: #fff;
  background: #2786fd;
}

.item {
  margin-top: 10px;
  font-size: 16px;
  color: #333;
}

.itemImg {
  width: 100%;
}

.itemName {
  align-items: flex-end;
  margin: 10rpx;
}

.itemTitle {
  width: 400rpx;
  -webkit-line-clamp: 1;
  /*单行文本带省略号：不换行、带省略号、超出隐藏
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;*/
}

.itemDiscount {
  color: red;
  margin-right: 10rpx;
}

.itemPrice {
  color: #999;
  font-size: 12px;
  text-decoration: line-through;
}

.itemBrief {
  margin: auto 10rpx;
  font-size: 16px;
}