/*搜索*/

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}

.weui-search-bar__form {
  position: relative;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}

.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}

.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}

.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  color: #9b9b9b;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.weui-icon-search {
  margin-right: 8px;
}

.weui-search-bar__text {
  font-size: 14px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09bb07;
  white-space: nowrap;
}

.weui-cells {
  position: absolute;
  left: 0;
  right: 0;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
  z-index: 999;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.weui-cell_active {
  background-color: #ececec
}

.weui-cell__bd {
  flex: 1
}

swiper {
  width: 750rpx;
  height: 335rpx;
  margin-bottom: 10px;
}

.swiper-item {
  display: block;
  width: 750rpx;
  height: 335rpx;
}

.head {
  height: 50px;
  position: relative
}

.headLine {
  width: 100%;
  height: 2px;
  background: #999;
}

.headBox {
  position: absolute;
  width: 702rpx;
  height: 50px;
}

.headText {
  background: #fff;
  padding: 0 20px;
  font-size: 24px;
  color: #333;
}

.category {}

.categoryBox {
  width: 25%;
  justify-content: space-around;
  align-items: center;
}

.categoryImgBox {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.categoryImg {
  width: 35px;
  height: 35px;
}

.categoryName {
  font-size: 16px;
  margin-top: 5px;
}

.tab {
  height: 70rpx;
}

.tabBar {
  height: 70rpx;
  width: 50%;
  background: #eee;
  word-spacing: 10px;
}

.tabLeft {
  border-radius: 20rpx 0 0 20rpx;
}

.tabRight {
  border-radius: 0 20rpx 20rpx 0;
}

.active {
